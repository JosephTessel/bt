<h1 class = "header">
<%= link_to "Designs", designs_path %><br>
</h1>
<h1 class = "showtitle">
<%= @design.design_name %>
</h1>
<h5 class = "showtitle">
<%= @design.description%><br>
</h5>
<h6 class =  "showtitle"><%= image_tag(@design.design_image) %></h6>


<% if @design.user == current_user %>
      <ul class="button-group text-center">
        <li><%= button_to "Delete this Design", design_path(@design), method: :delete, class: 'button' %></li>
        <li><%= button_to "Edit this Design", edit_design_path(@design), class: 'button', method: :get %></li>
      </ul>
  <% end %>
      <h2>Reviews</h2>
</div>
</div>
<div class="row">
<div class="enter-review">
  <div class="container">

  <%= form_for [@design, @review] do |f| %>

    <%= f.label :body %>
    <%= f.text_field :body %>

    <%= f.label :rating, "Rating (scale of 1 - 5)" %>
    <%= f.text_field :rating %>

    <%= f.submit "Submit" %>
  <% end %>
  </div>
</div>

  <% @reviews.each do |review| %>
  <div class="container-total-review">
    <div id="vote-div">
      <%= link_to image_tag("Upvote_Edited_Final.png"), upvote_review_votes_path(review), class: 'upvote' %>
        <div class= 'vote-total'>
          <%= @vote_total[review.id] %>
        </div>
      <%= link_to image_tag("Downvote_Edited_Final.png"), downvote_review_votes_path(review), class: 'downvote' %>
    </div>
    <div class="review-container">
      <p><strong>Review:</strong> <%= review.body %></p>
      <p><strong>Design Rating:</strong> <%= review.rating %></p>
      <p><strong>Time of Review:</strong> <%= review.created_at %></p>
      <% if review.user == current_user %>
        <%= this is where delete button will go %>
      <% end %>
    </div>
</div>
<% end %>

<%= paginate @reviews %>
</div>
