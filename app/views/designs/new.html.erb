<h1 class = "header"><%= link_to "Designs", designs_path%></h1> <h1 class = "submission">Submit a Design</h1>
<% provide(:title, "Submit a Design") %>
<div class="row">
  <% if @design.errors.present? %>
    <div class="large-12 alert-box alert radius" data-alert>
      <ul>
        <% @design.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <%end%>
  </div>
<div class = "row">
<%= form_for @design do |f| %>

  <%= f.label :design_image, "Select Your Image" %>
  <%= f.file_field :design_image, required:true %>

  <%= f.label :design_name %>
  <%= f.text_field :design_name, required:true %>

  <%= f.label :description %>
  <%= f.text_field :description, required:true %>

  <%= recaptcha_tags %><br>

  <%= f.submit "Submit Design!", class:"button" %>

<% end %>
</div>
